<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Clientes Registrados</h3>
        {{#if personas}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Id</th>
                        <th scope="col">Cedula</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Edad</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                        <tr>
                            <td>{{idCliente}}</td>
                            <td>{{dniCliente}}</td>
                            <td>{{apellidoCliente}}</td>
                            <td>{{nombreCliente}}</td>
                            <td>{{direccionCliente}}</td>
                            <td>{{edadCliente}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{idCliente}}" class="btn btn-outline-warning">
                                    <i class="fa-solid fa-pencil"></i>Actualizar</a>
                                    <div>
                                        <a href="/delete/{{idCliente}}" class="btn btn-outline-danger">
                                    <i class="fa-solid fa-trash"></i>Eliminar</a>
                                    </div>
                                  
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="/add" class="btn btn-primary">Registrar</a>
                </div>
        {{/if}}
    </div>
</div>