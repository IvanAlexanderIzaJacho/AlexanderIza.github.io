<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Actualizar datos del Cliente</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.idCliente}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Cedula</label>
                        <input class="form-control" type="text" name="dniCliente" id=" dniCliente" value="{{persona.dniCliente}}" placeholder="Ejemplo: 1208597078" autofocus required>
                        
                    </div>
                      <div class="input-group mt-2">
                        <label for="lastname" class="input-group-text">Apellido</label>
                        <input class="form-control" type="text" name="apellidoCliente" id="apellidoCliente" value="{{persona.apellidoCliente}}" placeholder="Ejemplo: Iza Jacho" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="nombreCliente" id="nombreCliente" value="{{persona.nombreCliente}}" placeholder="Ejemplo: Ivan Alexander" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Direccion</label>
                        <input class="form-control" type="text" name="direccionCliente" id="direccionCliente" value="{{persona.direccionCliente}}" placeholder="Ejemplo: Latacunga" required>
                    </div>
                  
                    <div class="input-group mt-2">
                        <label for="age" class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="edadCliente" id="edadCliente" value="{{persona.edadCliente}}" placeholder="26" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>